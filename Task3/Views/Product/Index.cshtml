@model List<Task2.Models.Entities.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<a class="btn btn-primary" href="/product/create">Add Product</a>
<a class="btn btn-primary" href="/product/ViewCart">View Cart</a>
<hr>
<h3>All Products</h3>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Description</th>
    </tr>
    @foreach (var p in Model)
    {
<tr>
    <td>@p.Id</td>
    <td>@p.Name</td>
    <td>@p.Qty</td>
    <td>@p.Price</td>
    <td>@p.Desc</td>
    <td><a href="/product/edit/@p.Id" class="btn btn-success">Edit</a></td>
    <td><a href="/product/delete/@p.Id" class="btn btn-danger">Delete</a></td>
    <td><a href="/product/AddToCart/@p.Id" class="btn btn-danger">Add to cart</a></td>
</tr>
    }
</table>

